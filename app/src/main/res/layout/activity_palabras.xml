<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/degradado_fondo2"
    tools:context=".activitys.PalabrasActivity">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutTexto"
         android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/tvSeleccionarIdioma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="COLECCION PALABRAS"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.1"/>

        <!-- TextView izquierdo -->
        <TextView
            android:id="@+id/textViewIzquierdo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="ORIGINAL"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textViewDerecho"
            app:layout_constraintTop_toBottomOf="@+id/tvSeleccionarIdioma"
            app:layout_constraintHorizontal_chainStyle="packed"/>

        <!-- TextView derecho -->
        <TextView
            android:id="@+id/textViewDerecho"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="TRADUCCIÃ“N"
            android:layout_marginTop="20dp"
            android:textSize="18sp"
            android:gravity="center"
            app:layout_constraintStart_toEndOf="@+id/textViewIzquierdo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvSeleccionarIdioma"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginVertical="40dp"
        app:layout_constraintTop_toBottomOf="@id/layoutTexto"
        app:layout_constraintBottom_toTopOf="@id/anadirBotton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/anadirBotton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:backgroundTint="#06407a"
        android:text="+"
        android:textSize="56dp"
        app:cornerRadius="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>